---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signin | mrizalr</title>
  </head>
  <body>
    <section class="w-screen h-screen flex items-center justify-center">
      <div
        class="w-[95%] max-w-[400px] flex flex-col items-center gap-6 bg-white p-6 rounded-xl shadow-[0_4px_12px_rgba(0,0,0,.3)]"
      >
        <img
          class="w-32 h-32 rounded-full mb-4"
          src="mrizalr-avatar.jpg"
          alt="mrizalr-avatar"
        />

        <div class="sm:px-8">
          <h1 class="text-xl font-bold">Hello mrizalr</h1>
          <h4>Insert your password to access your dashboard.</h4>
        </div>

        <form class="flex flex-col items-end gap-2 w-full sm:px-8">
          <div class="border-2 rounded-xl px-4 py-2 w-full">
            <input
              class="outline-none w-full bg-transparent"
              type="password"
              placeholder="password"
            />
          </div>
          <button
            class="bg-primary opacity-80 hover:opacity-100 duration-150 text-white font-medium px-4 py-1 rounded-lg"
            type="submit">login</button
          >
        </form>

        <a class="hover:underline" href="#">Lupa password ?</a>
      </div>
    </section>
  </body>
</html>
